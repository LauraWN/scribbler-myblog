<h2><%= @post.title %> <a href="/posts/<%= @post.id %>/edit">(edit)</a></h2>
<h4><%= @post.date %></h4>
<p><%= @post.text %></p>

<h3>Comments <%= link_to "(+)", new_post_comment_path(@post) %></h3>
<ul>
  <% @post.comments.each do |commment| %>
    <li>
      <%= link_to "#{comment.text} (#{comment.date})", post_comment_path(@post, comment) %>
    </li>

  <% end %>
</ul>
